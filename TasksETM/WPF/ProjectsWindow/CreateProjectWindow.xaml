<Window x:Class="TasksETM.WPF.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksETM.WPF"
        mc:Ignorable="d"
        Title="CreateProjectWindow" 
        Height="450"
        Width="500"
        MouseDown="MovingWin"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPF/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#272537"
        CornerRadius="20">
        <Grid>
            <Grid Height="50" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ETM"
                    FontSize="22"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="Wheat"
                    Margin="10,0,0,0"/>
                <Button Content="X" Grid.Column="1" Click="MinimizeWindow_Click"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#3A3A55"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontWeight="Bold" 
                    Width="30" 
                    Height="30"
                    Foreground="Wheat"
                    FontSize="20" Cursor="Hand" Margin="20, 0, 20, 0"/>
                <Button Content="&lt;-" Grid.Column="1" Click="ToPrevWindow_Click"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#3A3A55"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Width="50" 
                    Height="30"
                    Foreground="Wheat"
                    FontSize="20" Cursor="Hand" Margin="20, 0, 60, 0"/>
            </Grid>
            <Border
                CornerRadius="20"
                Height="300"
                Width="400"
                Background="#272537"
                Margin="50,74,50,46">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5"
                        Color="Black"
                        Opacity="0.5"
                        BlurRadius="10"/>
                </Border.Effect>
                <Grid x:Name="ChooseProjectPanel">
                    <TextBlock x:Name="WelcomeTextBlock"
                        Text="Создание проекта"
                        FontSize="20"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        TextTrimming="CharacterEllipsis"
                        Foreground="Wheat"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,20,0,0" 
                        Width="250" 
                        Height="85"
                        ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                    <TextBlock Text="Название проекта"
                        FontSize="16"
                        Foreground="Wheat"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="75,88,0,0"/>
                    <TextBox
                         x:Name="CreateProjectTextBox"
                         Height="22"
                         VerticalAlignment="Top"
                         Margin="75,125,75,0"
                         Background="#3A3A55"
                         Foreground="Wheat"
                         BorderBrush="#4A4A65"/>
                    <Button
                        Width="150px"
                        Height="40px"
                        Content="Создать проект"
                        VerticalAlignment="Top"
                        Margin="125,237,125,0"
                        BorderThickness="0"
                        FontSize="14"
                        Style="{StaticResource CustomButtonStyle}"
                        Cursor="Hand"
                        Click="CreateProject_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
