<Window x:Class="IssuingTasksETM.WPF.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssuingTasksETM.WPF"
        xmlns:converters="clr-namespace:TasksETM.Converters"
        mc:Ignorable="d"
        Title="TaskWindow" 
        Height="700" Width="1500"
        MouseDown="MovingWin"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#272537"
        CornerRadius="20">
        <Grid>
            <Grid Height="50" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ETM"
                      FontSize="22"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Foreground="Wheat"
                      Margin="10,0,0,0"/>

                <TextBlock x:Name="TitleBlock"
                      Grid.Column="1"
                      Foreground="Wheat"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="22"
                      Margin="0,0,50,0"/>
                <Button Content="X" Grid.Column="1" Click="CancelButton_Click"
            Style="{StaticResource CustomButtonStyle}"
            Background="#3A3A55"
            HorizontalAlignment="Right" 
            VerticalAlignment="Center" 
            FontWeight="Bold" 
            Width="30" 
            Height="30"
            Foreground="Wheat"
            FontSize="20" Cursor="Hand" Margin="20, 0, 20, 0"/>
                <Button Content="Назад" Grid.Column="1" Click="ToPrevWindow_Click"
                Style="{StaticResource CustomButtonStyle}"
                Background="#3A3A55"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
            Width="70" 
            Height="30"
            Foreground="Wheat"
            FontSize="20" Cursor="Hand" Margin="20, 0, 60, 0"/>
            </Grid>
                <Grid Margin="0,60,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center"
                                Width="200"
                                Margin="15,30,0,40">
                        <Button x:Name="DeptLoginButton"
                                Content="Создание заданий"
                                Height="40"
                                Margin="0,0,0,10"
                                Background="#3A3A55"
                                Foreground="Wheat"
                                BorderThickness="0"
                                Style="{StaticResource CustomButtonStyle}"
                                Cursor="Hand"
                                Click="CreateTaskWindow_Click">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="2"
                    Color="Black"
                        Opacity="0.3"
                    />
                            </Button.Effect>
                        </Button>
                        <Button x:Name="HipLoginButton"
                                Content="Фильтрация заданий"
                                Height="40"
                                Background="#3A3A55"
                                Foreground="Wheat"
                                BorderThickness="0"
                                Style="{StaticResource CustomButtonStyle}"
                                Cursor="Hand"
                                Click="FilterWindow_Click">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="2"
                                Color="Black"
                                Opacity="0.3"
                                />
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                <Border Grid.Column="1"
                    CornerRadius="40"
                    Background="#272537"
                    Margin="20,0,0,10">
                    <DataGrid  SelectionMode="Single" 
                           Grid.Column="1" 
                           SelectionUnit="Cell" 
                           x:Name="tasksDataGrid"  
                           AutoGenerateColumns="False"  
                           HeadersVisibility="Column" 
                           FontFamily="Arial Black" 
                           CanUserAddRows="False"  
                           Margin="0,0,10,0"
                           Background="#272537"
                           Foreground="Wheat"
                           RowHeight="100"
                           SelectionChanged="tasksDataGrid_SelectionChanged"
                           Style="{StaticResource CustomDataGridStyle}">
                        <DataGrid.Columns >
                            <!--<DataGridTextColumn   IsReadOnly="True" Header="№" Binding="{Binding Path=TaskNumber}" Width="20"/>-->
                            <DataGridTextColumn  IsReadOnly="True" Header="От" Binding="{Binding  FromDepart}" Width="50"/>
                            <DataGridTextColumn  IsReadOnly="True" Header="Кому" Binding="{Binding  ToDepart}" Width="50"/>
                            <DataGridTemplateColumn IsReadOnly="False" Header="Принял" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <!-- Чекбокс и подпись для АР -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <CheckBox IsChecked="{Binding Path=IsAR, UpdateSourceTrigger=PropertyChanged}" 
                                                        Checked="CheckBox_Changed" 
                                                        Unchecked="CheckBox_Changed" 
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="АР" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <!-- Чекбокс и подпись для ВК -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <CheckBox IsChecked="{Binding Path=IsVK, UpdateSourceTrigger=PropertyChanged}" 
                                                    Checked="CheckBox_Changed" 
                                                    Unchecked="CheckBox_Changed" 
                                                    VerticalAlignment="Center"/>
                                                <TextBlock Text="ВК" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <!-- Чекбокс и подпись для ОВ -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <CheckBox IsChecked="{Binding Path=IsOV, UpdateSourceTrigger=PropertyChanged}" 
                                                        Checked="CheckBox_Changed" 
                                                        Unchecked="CheckBox_Changed" 
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="ОВ" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <!-- Чекбокс и подпись для СС -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <CheckBox IsChecked="{Binding Path=IsSS, UpdateSourceTrigger=PropertyChanged}" 
                                                        Checked="CheckBox_Changed" 
                                                        Unchecked="CheckBox_Changed" 
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="СС" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <!-- Чекбокс и подпись для ЕС -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <CheckBox IsChecked="{Binding Path=IsES, UpdateSourceTrigger=PropertyChanged}" 
                                                          Checked="CheckBox_Changed" 
                                                          Unchecked="CheckBox_Changed" 
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Text="ЕС" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTemplateColumn IsReadOnly="False" Header="Готово"  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Path=TaskCompleted, UpdateSourceTrigger=PropertyChanged}" 
                                                    Checked="CheckBox_Changed" 
                                                    Unchecked="CheckBox_Changed" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Скриншот экрана"  IsReadOnly="True" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding ScreenshotPath, Converter={StaticResource ByteArrayToImageConverter}}"
                                            Stretch="Uniform"
                                             MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}}"
                                             MouseLeftButtonDown="Image_MouseLeftButtonUp"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn  IsReadOnly="True" Header="Вид" Binding="{Binding TaskView}" Width="170"/>
                            <DataGridTextColumn  IsReadOnly="True" Header="Описание задания" Binding="{Binding  TaskDescription}" Width="280">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn  IsReadOnly="True" Header="Дата создания" Binding="{Binding TaskDate}" Width="160"/>
                            <DataGridTextColumn IsReadOnly="True" Header="Крайний срок" Binding="{Binding TaskDeadline}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
