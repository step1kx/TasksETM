<Window x:Class="TasksETM.WPF.CloseSoftwareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksETM.WPF"
        mc:Ignorable="d"
        Title="CloseSoftwareWindow" 
        Height="250" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Foreground="Wheat"
        Background="Transparent">
    <Border Background="#272537"
           CornerRadius="30"
        Margin="20">
        <!-- Добавлен Margin для теней -->
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5"
                             Color="#1A1A1A"
                             Opacity="0.6"
                             BlurRadius="20"
                             Direction="270"/>
        </Border.Effect>
        <Grid>
            <TextBlock Text="ETM" Margin="10, 10, 0, 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock Text="Проверка перед закрытием" Margin="10, 10, 0, 0" Height="25" Width="170" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <StackPanel Height="150">
                <TextBlock Text="" x:Name="TextBlock" Width="160" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="15"/>
                <ProgressBar x:Name="ProgressBar" Margin="0, 75, 0,0" Width="250"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
