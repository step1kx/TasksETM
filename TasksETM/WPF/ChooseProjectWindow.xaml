<Window x:Class="TasksETM.WPF.ChooseProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksETM.WPF"
        mc:Ignorable="d"
        Title="ChooseProjectWindow" 
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid Height="50" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ETM"
              FontSize="22"
              HorizontalAlignment="Left"
              VerticalAlignment="Center"
              Foreground="Wheat"
              Margin="10,0,0,0"/>

                
                <Button Content="X" Grid.Column="1" Click="CancelButton_Click"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#3A3A55"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontWeight="Bold" 
                    Width="30" 
                    Height="30"
                    Foreground="Wheat"
                    FontSize="20" Cursor="Hand" Margin="20, 0, 20, 0"/>
                <Button Content="Назад" Grid.Column="1" Click="ToPrevWindow_Click"
                    Style="{StaticResource CustomButtonStyle}"
                    Background="#3A3A55"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Width="70" 
                    Height="30"
                    Foreground="Wheat"
                    FontSize="20" Cursor="Hand" Margin="20, 0, 60, 0"/>
            </Grid>
            <Border Grid.Column="1"
                    CornerRadius="20"
                    Height="300"
                    Width="300"
                    Background="#272537"
                    Margin="20,0,0,10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5"
                        Color="Black"
                        Opacity="0.5"
                        BlurRadius="10"/>
                </Border.Effect>
                <Grid x:Name="ChooseProjectPanel">
                    <TextBlock Text="Выбор проекта"
                      FontSize="20"
                      Foreground="Wheat"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Margin="0,20,0,0"/>
                        <TextBlock Text="Список проектов"
                      FontSize="16"
                      Foreground="Wheat"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="50,0,0,70"/>
                        <ComboBox Width="200"
                        x:Name="ProjectsComboBox"
                    Height="25"
                    VerticalAlignment="Center"
                    Margin="0,0,0,0"
                    Background="#3A3A55"
                    Foreground="Wheat"
                    BorderBrush="#4A4A65"/>
                       
                    <Button
                   Width="150px"
                   Height="30px"
                   Content="Перейти к заданиям"
                   VerticalAlignment="Bottom"
                   Margin="30px"
                   Background="#3A3A55"
                   Foreground="Wheat"
                   BorderThickness="0"
                   Style="{StaticResource CustomButtonStyle}"
                   Cursor="Hand"
                   Click="ZaglushkaButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
