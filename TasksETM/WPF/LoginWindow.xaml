<Window x:Class="IssuingTasksETM.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssuingTasksETM.WPF"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="450" 
        Width="800" 
        MouseDown="MovingWin"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid Height="50" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ETM"
                          FontSize="22"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Foreground="Wheat"
                          Margin="10,0,0,0"/>

                <TextBlock Text="Добро пожаловать в программу выдачи заданий!"
                          Grid.Column="1"
                          Foreground="Wheat"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          FontSize="22"
                          Margin="0,0,50,0"/>
                <Button Content="X" Grid.Column="1" Click="MinimizeWindow_Click"
                Style="{StaticResource CustomButtonStyle}"
                Background="#3A3A55"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                FontWeight="Bold" 
                Width="30" 
                Height="30"
                Foreground="Wheat"
                FontSize="20" Cursor="Hand" Margin="20, 0, 20, 0"/>
            </Grid>

            <Grid Margin="0,60,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Top"
                           Width="200"
                           Margin="15,30,0,40">
                    <Button x:Name="DeptLoginButton"
                           Content="Вход для отделов"
                           Height="40"
                           Margin="0,0,0,10"
                           Background="#3A3A55"
                           Foreground="Wheat"
                           BorderThickness="0"
                           Style="{StaticResource CustomButtonStyle}"
                           Cursor="Hand"
                           Click="DeptLoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2"
                                Color="Black"
                                    Opacity="0.3"
                                />
                        </Button.Effect>
                    </Button>
                    <Button x:Name="HipLoginButton"
                           Content="Вход для Гипов"
                           Height="40"
                           Background="#3A3A55"
                           Foreground="Wheat"
                           BorderThickness="0"
                           Style="{StaticResource CustomButtonStyle}"
                           Cursor="Hand"
                           Click="HipLoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2"
                                            Color="Black"
                                            Opacity="0.3"
                                            />
                        </Button.Effect>
                    </Button>
                    <Button x:Name="HelpLoginButton"
                           Content="❔ Справка"
                           Height="40"
                           Background="#3A3A55"
                           Foreground="Wheat"
                           BorderThickness="0"
                           Margin="0,100,0,10"
                           Style="{StaticResource CustomButtonStyle}"
                           Cursor="Hand"
                           Click="HelpLoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2"
                                            Color="Black"
                                            Opacity="0.3"
                                            />
                        </Button.Effect>
                    </Button>
                </StackPanel>

                <!-- Login Panel -->
                <Border Grid.Column="1"
                       CornerRadius="20"
                       Height="360"
                       Width="300"
                       Background="#272537"
                       Margin="0,0,50,30">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="5"
                                        Color="Black"
                                        Opacity="0.5"
                                        BlurRadius="10"/>
                    </Border.Effect>
                    <Grid x:Name="LoginPanel">
                        <Grid x:Name="HipLoginGrid"  Visibility="Hidden">
                            <TextBlock Text="Вход для ГИПов"
                                      FontSize="20"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      Margin="0,10,0,0"/>
                            <TextBlock Text="Логин отдела"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,50,0,0"/>
                            <ComboBox
                                    x:Name="LoginHipComboBox"
                                    Width="200"
                                    Height="25px"
                                    VerticalAlignment="Top"
                                    Margin="0,80,0,0"
                                    Background="#4A4A65"
                                    Foreground="Wheat"
                                    BorderBrush="#4A4A65"
                                Style="{StaticResource CustomComboBoxStyle}"
                                SelectionChanged="StatusHipComboBox_SelectionChacnged"/>
                            <TextBlock
                                      Text="Фамилия сотрудника"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,130,0,0"
                                      />
                            <ComboBox
                                    x:Name="LoginHipSurnamesComboBox"
                                    Width="200"
                                    Height="25px"
                                    VerticalAlignment="Top"
                                    Margin="0,160,0,0"
                                    Background="#4A4A65"
                                    Foreground="Wheat"
                                    BorderBrush="#4A4A65"
                                Style="{StaticResource CustomComboBoxStyle}"/>
                            <CheckBox
                                    x:Name="SaveCurrentHipCheckbox"
                                    Width="120"
                                    Height="25"
                                    Background="#3A3A55"
                                    Foreground="Wheat"
                                    BorderBrush="#4A4A65"
                                    Content="Запомнить меня"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                                    Margin="50,0,0,60"/>
                            <TextBlock Text="Пароль"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,200,0,0"/>
                            <PasswordBox Width="200"
                                        Height="20"
                                        x:Name="PasswordBoxHip"
                                        VerticalAlignment="Top"
                                        Margin="0,230,0,0"
                                        Background="#3A3A55"
                                        Foreground="Wheat"
                                        BorderBrush="#4A4A65"/>
                            <Button
                                    Width="150px"
                                    Height="25px"
                                    Content="Вход"
                                    VerticalAlignment="Bottom"
                                    Margin="30px"
                                    Background="#3A3A55"
                                    Foreground="Wheat"
                                    BorderThickness="0"
                                    Style="{StaticResource CustomButtonStyle}"
                                    Cursor="Hand"
                                    Click="ToChooseProjectButton_Click"/>
                        </Grid>

                        <!-- Departments Login Panel -->
                        <Grid x:Name="DeptLoginGrid" Visibility="Visible">
                            <TextBlock Text="Вход для отделов"
                                      FontSize="20"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      Margin="0,0,0,0"/>
                            <TextBlock
                                      Text="Логин отдела"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,50,0,0"
                                      />
                            <ComboBox
                                    x:Name="LoginComboBox"
                                    Width="200"
                                    Height="25px"
                                    VerticalAlignment="Top"
                                    Margin="0,80,0,0"
                                    Background="#4A4A65"
                                    Foreground="Wheat"
                                    BorderBrush="#4A4A65"
                                Style="{StaticResource CustomComboBoxStyle}"
                                SelectionChanged="StatusComboBox_SelectionChanged"/>
                            <TextBlock
                                      Text="Фамилия сотрудника"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,130,0,0"
                                      />
                            <ComboBox
                                    x:Name="LoginEmployeeComboBox"
                                    Width="200"
                                    Height="25px"
                                    VerticalAlignment="Top"
                                    Margin="0,160,0,0"
                                    Background="#4A4A65"
                                    Foreground="Wheat"
                                    BorderBrush="#4A4A65"
                                Style="{StaticResource CustomComboBoxStyle}"/>
                            <TextBlock 
                                      Text="Пароль"
                                      FontSize="16"
                                      Foreground="Wheat"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="50,200,0,0"/>
                            <PasswordBox
                                        x:Name="PasswordBox"
                                        Width="200"
                                        Height="20"
                                        VerticalAlignment="Top"
                                        Margin="0,230,0,0"
                                        Background="#3A3A55"
                                        Foreground="Wheat"
                                        BorderBrush="#4A4A65"/>
                            <CheckBox
                                x:Name="SaveCurrentUserCheckbox"
                                Width="120"
                                Height="25"
                                Background="#3A3A55"
                                Foreground="Wheat"
                                BorderBrush="#4A4A65"
                                Content="Запомнить меня"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Margin="50,0,0,70"/>
                            <Button
                                   Width="150px"
                                   Height="30px"
                                   Content="Вход"
                                   VerticalAlignment="Bottom"
                                   Margin="30px"
                                   Background="#3A3A55"
                                   Foreground="Wheat"
                                   BorderThickness="0"
                                   Style="{StaticResource CustomButtonStyle}"
                                   Cursor="Hand"
                                   Click="ToChooseProjectButton_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>